{
    "version": 2,
    "installCommand": "npm install --prefix client",
    "buildCommand": "npm run build --prefix client",
    "outputDirectory": "client/dist",
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/api/index.js"
        },
        {
            "source": "/auth/(.*)",
            "destination": "/api/index.js"
        }
    ],
    "functions": {
        "api/index.js": {
            "includeFiles": "server/**",
            "maxDuration": 30
        }
    }
}