{
    "version": 2,
    "installCommand": "npm install --workspaces --include-workspace-root",
    "buildCommand": "npm run build --workspace=client",
    "outputDirectory": "client/dist",
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/api/index.js"
        },
        {
            "source": "/auth/(.*)",
            "destination": "/api/index.js"
        }
    ],
    "functions": {
        "api/index.js": {
            "includeFiles": "server/**"
        }
    }
}